@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right text-white">
            <li>
                @Html.ActionLink("Hola " + User.Identity.GetUserName() + "! ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"> Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    <span class="navbar-text text-white">
        <a href="@Url.Action("Register", "Account")" class="text-white" style="text-decoration: none">Registro</a> |
        <a href="@Url.Action("Login", "Account")" class="text-white" style="text-decoration: none">Iniciar Sesión</a>
    </span>
}
